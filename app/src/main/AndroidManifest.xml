<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalRestaurantGuide"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDoeilT73rdhL-l9jIChpQTT6zhtqn2Z_0"/>

        <!-- Facebook SDK API Key -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <!-- FacebookActivity -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <!-- SplashActivity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PersonalRestaurantGuide.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />

        <!-- AddEditRestaurantActivity -->
        <activity
            android:name=".activities.AddEditRestaurantActivity"
            android:exported="true" />

        <!-- RestaurantDetailsActivity -->
        <activity
            android:name=".activities.RestaurantDetailsActivity"
            android:exported="true" />

        <!-- MapActivity -->
        <activity
            android:name=".activities.MapActivity"
            android:exported="true" />

        <!-- AboutActivity with back navigation to MainActivity -->
        <activity
            android:name=".activities.AboutActivity"
            android:exported="true"
            android:parentActivityName=".activities.MainActivity">
            <!-- Support for back navigation on lower API levels -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

    </application>
</manifest>
